<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#F2D241"
            android:elevation="4dp"
            android:gravity="bottom"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/topBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Collaboration"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/collabNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corners"
            android:padding="16dp"
            android:text="Hullor is excited to announce its collaboration with local event organizers to bring you unforgettable experiences. Whether it’s a concert, corporate event, wedding, or comedy show, our team is committed to making every moment special and seamless. By partnering with talented local professionals, we ensure exceptional quality, creativity, and personalized attention for every event. Share your vision with us, and together we will craft memorable experiences that exceed expectations. Join the Hullor community today and let us help you celebrate life’s important moments with style, fun, and flawless execution."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/collaborateWithHullorBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collaborate with Hullor"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#F2D241"
            android:textColor="@color/black" />

        <!-- FORM SECTION -->
        <LinearLayout
            android:id="@+id/formLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/rounded_corners"
            android:visibility="gone"> <!-- Form initially hidden -->


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please fill the below form"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="12dp"
               />
            <EditText


                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:padding="12dp"
                android:background="@drawable/news_item_bg" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="12dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/news_item_bg" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/news_item_bg" />

            <!-- EVENT TYPE (DROPDOWN) -->
            <Spinner
                android:id="@+id/spinnerEventType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:padding="8dp"
                android:background="@drawable/news_item_bg" />

            <!-- EVENT DATE -->
            <EditText
                android:id="@+id/etEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Date"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/news_item_bg" />

            <!-- EVENT ADDRESS -->
            <EditText
                android:id="@+id/etEventAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Address"
                android:padding="12dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/news_item_bg" />


            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Message / Details"
                android:gravity="top"
                android:padding="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/news_item_bg" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:backgroundTint="#F2D241"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
